FROM python:2

WORKDIR /root
RUN git clone https://github.com/HyechurnJang/adun.git

WORKDIR /root/adun
RUN pip install --no-cache-dir -r xtra/docker/engine.requirements

ENV MDB_IP mariadb
ENV MDB_ROOT root
ENV MDB_PASS 1234Qwer
ENV QUARANTINE_VLAN 0

CMD [ "python tracker.py -a $APIC_IP -u $APIC_USERNAME -p $APIC_PASSWORD -m $MDB_IP -r $MDB_ROOT -s $MDB_PASS -q $QUARANTINE_VLAN" ]